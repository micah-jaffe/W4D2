<h1> Book a cat! </h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <select name="cat_rental_requests[cat_id]">

    <option value="" disabled >SELECT A CAT</option>

    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"> <%= cat.name %></option>
    <% end %>
  </select> <br>

  <label> Start Date and End Date  <br>
  <input type="date" name="cat_rental_requests[start_date]" value="start_date">
  <input type="date" name="cat_rental_requests[end_date]" value="end_date">
  </label>   <br>

  <input type="submit" name="" value="Book me">
</form>
