<h1><%= @cat.name %>'s page</h1>


<table>
<thead>
    <tr>
        <th colspan="2"><%= @cat.name %></th>
    </tr>
</thead>
<tbody>
    <tr>
        <td>Birthdate</td>
        <td><%= @cat.birth_date %></td>
    </tr>
    <tr>
        <td>Color</td>
        <td><%= @cat.color %> </td>
    </tr>
    <tr>
        <td>Description</td>
        <td><%= @cat.description %></td>
    </tr>
    <tr>
        <td>Age</td>
        <td><%= @cat.age %></td>
    </tr>
    <tr>
        <td>Sex</td>
        <td><%= @cat.sex %></td>
    </tr>
</tbody>
</table>

<h2>My requests...</h2>

<ul>
  <% @cat.cat_rental_requests.sort_by { |r| r.start_date }.each do |request| %>
    <li>Start Date: <%= request.start_date %>, End Date: <%= request.end_date %>,  Status: <%= request.status %> </li>
  <% end %>
</ul>


<a href="<%= new_cat_rental_request_url %>">Book me!</a><br>
